    <form name="get_form" method="get" action="/getForm">
        <input type="text" name="user_id" placeholder="Id" required />
        <input type="password" name="user_pw" placeholder="Password" required />
        <input type="tel:010" />
        <input type="number" />
        <input type="date" />
        <button type="submit">submit</button>
    </form>
